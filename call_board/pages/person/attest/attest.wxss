.lastTip{
  margin-top:20rpx;
  font-size: 33rpx;
  color: rgb(114, 6, 6);
  align-items: center;
  justify-content: center;
}

.user {
  position: relative;
  padding-left: 8%;
  padding-right: 8%;
background: rgb(248, 247, 247);
  list-style: none;
  line-height: 40rpx;
}

.user-item {
  height: 117rpx;
  line-height: 117rpx;
  display: flex;
    border-bottom: 1rpx solid #d8d8d8;
}

.name {
color:#333;
  font-size: 34rpx;
  text-align: left;
}

.number {
  float: left;
  border: none;
  width: 70%;
  position: relative;
  line-height: 117rpx;
  height: 117rpx;
 
  margin-left: 20rpx;
  color: #888;
  font-size: 30rpx;
}

.icon {
  position:absolute;
 right: 6rpx;
  margin-top: -10rpx;
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  color: #999;
}

.proto {
  font-size: 25rpx;
  position: relative;
top:15rpx;
text-align: center;
  color: #54b1d3;
}

.butt {
  position: fixed;
  bottom: 5rpx;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 1%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  color: #fff;
  z-index: 999;
}

.shade {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  color: #000;
  z-index: 10;
}

.box {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  z-index: 11;
  min-width: 100rpx;
  min-height: 200rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;
  letter-spacing: 0;
  word-wrap: break-word;
  animation-name: popup;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-delay: 0;
  animation-iteration-count: 1;
  animation-direction: normal;
}

.popup {
  position: relative;
  width: 600rpx;
  top:15rpx;
  background-color: #fff;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
  border-radius: 20rpx;
}

.title {
  padding: 0 20rpx;
  border-bottom: #e5e5e5 solid 1rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: 700;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-color: #fff;
  color: #000;
}

.content {
  margin: 10rpx 20rpx 10rpx 20rpx;
  font-size: 30rpx;
  text-align: justify;
 
}
.content-item{
   text-indent: 6%;
}

@keyframes popup {
  from {
    opacity: 0;
    transform: scale(0.3, 0.3);
  }

  to {
    opacity: 1;
    transform: scale(1, 1);
  }
}
