page {
  background: #eee;
}

.top .user {
  width: 100%;
  height: 200rpx;
  flex-direction: flex;
  background-color: rgb(255, 209, 97);
}

.top .user .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  display: block;
  margin: auto 30rpx;
  overflow: hidden;
}

.top .user .name {
  font-size: 32rpx;
  color: rgb(0, 0, 0);
  line-height: 200rpx;
  font-weight: bold;
}

.menu {
  margin-top: 20rpx;
  width: 100%;
}

.menu .item {
  border-bottom: 1px #eee solid;
  background: #fff;
  display: flex;
  padding-left: 16rpx;
  height: 70rpx;
}

.menu .item .sub-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  line-height: 1.75em;
  color: #333;
}