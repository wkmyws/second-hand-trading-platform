.top .user {
  width: 100%;
  flex-direction: flex;
  background-color: #eee;
}

.top .user .avatar {
  background-image: url("https://xcx.nau.edu.cn/images/background1.jpg");
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  display: block;
  margin: auto 60rpx;
  overflow: hidden;
  border: 5rpx solid #fff;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.top .user .name {
  font-size: 32rpx;
  color: rgb(0, 0, 0);
  line-height: 200rpx;
  font-weight: bold;
}

.menu {
  margin: 10rpx;
  border: 3rpx solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.menu .item {
  border-bottom: 1px #eee solid;
  background: #fff;
  display: flex;
  padding-left: 16rpx;
  height: 70rpx;
}

.menu .item .sub-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  line-height: 1.75em;
  color: #333;
}

page {
  background: #eee;
}
