page {
  background: rgb(248, 247, 247);
}

swiper {
  position: absolute;
  height: 100%;
  width: 100%;
}

/*tab的设置*/

.swiper-tab {
  background: white;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #434343;
}

.active {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

/*公告的设置*/

.board {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx #eee;
  box-shadow: 0rpx 8rpx 9rpx #ccc;
  padding-bottom: 10rpx;
}


.body {
  position: relative;
  display: flex;
 
}

.text1 {
  position: relative;
  font-size: 32rpx;
  margin-left: 25rpx;
  text-indent: 50rpx;
  line-height: 50rpx;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.text2 {
  position: relative;
  font-size: 32rpx;
  margin-left: 25rpx;
  text-indent: 50rpx;
  margin-right: 25rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.img-plus-style {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

/*图片*/

.bottom {
  height: 80rpx;
}

.image {
  margin: -30rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.img {
  position: relative;
  width: 220rpx;
  height: 160rpx;
  margin: 0 -25rpx 0 -25rpx;
  float: right;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

.butt {
  width: 100%; /* 670rpx */
  height: 275rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: auto;
}

.save1 {
  position: absolute;
  right: 50rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.SaveNum {
  font-size: 29rpx;
  color: #bbb;
  position: relative;
  margin-left: 25rpx;
  margin-bottom:5rpx;
  margin-top:5rpx;
}
.num{
    font-size: 30rpx;
  color:#e00;
    font-weight:700;
  position: relative;
  margin:15rpx 30rpx 15rpx 30rpx;

}
.thumbs_up1 {
  position: absolute;
  right: 140rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.ThumbNum {
  font-size: 29rpx;
  color: #bbb;
  position: relative;
  margin-bottom: 3rpx;
}

/*用户*/

.top {
  display: flex;
  height: 70rpx;
}

.userhead {
  width: 50rpx;
  height: 50rpx;
  border-radius: 80px;
  box-shadow: 0px 0px 0.5px 1px #eee;
  margin: 10rpx 15rpx 10rpx 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 29rpx;
  font-weight: bold;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: 8rpx;
}

.time {
  font-size: 28rpx;
  color: #bbb;
  position: absolute;
  float: right;
  right: 25rpx;
}

.title {
  font-size:35rpx;
  font-weight:700;
  margin: 0rpx 25rpx 10rpx 25rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;

}
.miniimg {
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  overflow: hidden;
}
.intro{
  width: 66%;
  margin-right: 10rpx;
}