page {
  background: #eee;
}

swiper {
  position: absolute;
  height: 100%;
  width: 100%;
}

.body {
  padding: 15rpx;
}

/*tab的设置*/

.swiper-tab {
  background: white;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #434343;
}

.active {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

/*公告的设置*/

.board {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx #eee;
  box-shadow: 1.5rpx 0rpx 1.5rpx 0px #eee;
  padding-bottom: 10rpx;
}

.title {
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 37rpx;
  font-weight: 700;
  margin: 0rpx 10rpx 8rpx 15rpx;
}

.body {
  display: flex;
}

.text1 {
  position: relative;
  font-size: 28rpx;
  left: 5rpx;
  text-indent: 6%;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.img-plus-style {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

/*图片*/

.image {
  margin: -30rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.img {
  position: relative;
  width: 160rpx;
  height: 210rpx;
  margin: 0 -25rpx 0 -25rpx;
  float: left;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

/*用户*/

.top {
  display: flex;
  height: 60rpx;
}

.userhead {
  width: 50rpx;
  height: 50rpx;
  border-radius: 80px;
  box-shadow: 0px 0px 0.5px 1px #eee;
  margin: 10rpx 15rpx 10rpx 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: 10rpx;
}

.time {
  margin: auto 15rpx;
  font-size: 32rpx;
  text-indent: 6%;
  color: #bbb;
  position: absolute;
  bottom: 10rpx;
}
