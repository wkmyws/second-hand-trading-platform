page {
  background: #eee;
}

.body {
  padding: 15rpx;
  margin-bottom: 15rpx;
}

.bottom {
  height: 80rpx;
}

.board {
  background: white;
  margin-bottom: 5rpx;
  border-radius: 5rpx;
  position: relative;
}

.box {
  background: #fff;
  height: auto;
  margin-bottom: 15rpx;
  padding: 5rpx 5rpx 5rpx 10rpx;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.passage {
  margin: auto 15rpx;
  font-size: 32rpx;
  text-indent: 6%;
}

.passage.time {
  color: #bbb;
  position: absolute;
  bottom: 10rpx;
}

/*图片*/

.image_content {
  background: white;
  display: flex;
  flex-wrap: wrap;
  margin-left: 1%;
}

.image {
  width: 32%;
  height: 120px;
  margin-right: 1%;
  margin-bottom: 1%;
}

.img {
  width: 100%;
  height: 100%;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.talk {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 15rpx;
}

/*用户*/

.top {
  display: flex;
}

.userhead {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80px;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: block;
  overflow: hidden;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  color: #bbb;
  align-items: center;
  margin-right: 15rpx;
}

.title {
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 37rpx;
  font-weight: 700;
  margin: 0rpx 10rpx 8rpx 15rpx;
}
/*底部按钮*/

.button{
  width: 96%;
  margin-left: 2%;
  margin-bottom: 5px;
}