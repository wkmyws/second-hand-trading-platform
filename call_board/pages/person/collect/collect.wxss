page {
  background: rgb(248, 247, 247);
}

swiper {
  position: absolute;
  height: 100%;
  width: 100%;
}

swiper-item {
  position: relative;
  height: 100%;
  overflow: scroll;
}

/*tab的设置*/

.swiper-tab {
  background: white;
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 50%;
  color: #434343;
}

.active {
  color: #f65959;
  border-bottom: 4rpx solid #f65959;
}

/*公告的设置*/

.board {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx #eee;
  padding-bottom: 10rpx;
}

.body {
  position: relative;
  display: flex;
}

.text1 {
  position: relative;
  font-size: 32rpx;
  margin-left: 25rpx;
  text-indent: 50rpx;
  line-height: 50rpx;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.text2 {
  position: relative;
  font-size: 32rpx;
  margin-left: 25rpx;
  text-indent: 50rpx;
  margin-right: 25rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

/*图片*/

.bottom {
  height: 80rpx;
}

.icon {
  position: absolute;
  float: right;
  width: 40rpx;
  height: 40rpx;
  top: 20rpx;
  right: 20rpx;
}

.image {
  margin: -30rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.img {
  position: relative;
  width: 220rpx;
  height: 160rpx;
  margin: 0 -25rpx 0 -25rpx;
  float: right;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

.intro {
  width: 66%;
  margin-right: 10rpx;
}

