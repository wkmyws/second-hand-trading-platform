page {
  background-color: rgb(248, 247, 247);
}

.page__hd {
  padding: 30rpx 35rpx;
  text-align: center;
}

.page__title {
    color: #333;
  font-weight: 700;
}

.page__desc {
  margin-top:5rpx;
  font-size: 28rpx;
  color: #333;
}

.weui-media-box__thumb {
   height: 100rpx;
  width: 100rpx;
}

.weui-center {
  text-align: center;
  padding-bottom: 10px;
}

.weui-article {
   padding: 20px 15px;
  font-size: 30rpx;
}
.weui-article__title{
  font-weight:700;
   margin-bottom:8rpx;
}
.weui-article__p {
  color: #333;
  margin-bottom: 10rpx;
}

.button-sp-area {
  padding: 30rpx 35rpx;
}

button[type="primary"][plain] {
  color: #fff;
  background-image: linear-gradient(to top, #567a9428 0%, #567a94 100%);
  box-shadow: 0 10rpx 35rpx #567a9428;
}

.button-hover[type="primary"][plain] {
  color: #fff;
  border-color: #96deda;
  opacity: 0.6;
}

button[type="default"][plain] {
  color: #fff;
  border: 1px solid #fbc2eb;
  background-image: linear-gradient(-45deg, #fbc2eb 0%, #a6c1ee 100%);
}

.button-hover[type="default"][plain] {
  color: #fff;
  border-color: #fbc2eb;
  opacity: 0.6;
}
