page {
  background: rgb(248, 247, 247);
}

.top {
  background-color: rgb(248, 247, 247);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 8% 0 8%;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  width: 84%;
  height: 260rpx;
}

.nickpic {
  width: 220rpx;
  height: 220rpx;
  border-radius: 130rpx;
  margin: 0;
  overflow: hidden;
  border: 8rpx solid #fff;
}

.nickname {
  text-align: center;
  margin: 20rpx 0 -140rpx 0;
  font-weight: 700;
  font-size: 38rpx;
}

.item {
  height: 100rpx;
  background-color: rgb(248, 247, 247);
  display: flex;
  margin-left: 8%;
}

.left {
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  font-size: 35rpx;
}

.right {
  display: flex;
  align-items: center;
  color: rgb(136, 136, 136);
  padding-right: 16rpx;
}

.butt {
  position: relative;
  bottom: 5rpx;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 1%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  color: #fff;
  z-index: 999;
}

.myinfo {
  margin-top: 130rpx;
  width: 100%;
  margin-bottom: 30rpx;
}

