page{
  background: #eee;
}

.top{
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  margin-bottom: 20rpx;
  border-radius: 0% 0% 20% 20%;

}

.nickpic{
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  border-radius: 20rpx;
}

.nickname{
  text-align: center;
}

.item{
  height: 70rpx;
  background-color: white;
  display: flex;
  margin-top: 1px;
}

.left{
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  font-size: 32rpx;
}

.right{
  display: flex;
  align-items: center;
  color: rgb(136, 136, 136);
}

.butt{
  position: fixed;
  bottom: 5px;
  width: 96%;
  margin-left: 2%;
}