<view class='menu'>
  <view class='item'>
    <text class='left'>昵称：</text>
    <input class='right' maxlength='10' placeholder='{{my_info.user_name}}' bindchange='change_name'></input>
  </view>

  <view class='item'>
    <text class='left'>性别：</text>
    <picker class='right' bindchange='change_sex' range='{{sex}}'>{{my_info.user_sex}}</picker>
  </view>

  <view class='item'>
    <text class='left'>微信号：</text>
    <input class='right'></input>
  </view>

  <view class='item'>
    <text class='left'>QQ号：</text>
    <input class='right' type='number'bindchange='change_qq' placeholder='{{my_info.user_qq}}'></input>
  </view>

  <view class='item'>
    <text class='left'>电话号码：</text>
    <input class='right' type='number' maxlength='11' bindchange='change_phone' placeholder='{{my_info.user_phone}}'></input>
  </view>

  <button class='butt1' open-type="getUserInfo" bindgetuserinfo="get_user_info">授权使用微信信息</button>
  <button class='butt' bindtap='save'>保存修改</button>
</view>