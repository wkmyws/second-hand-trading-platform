<view class='top'>
  <view class='item'>
    <text class='left'>姓名：</text>
    <input class='right' maxlength='10'></input>
  </view>

  <view class='item'>
    <text class='left'>性别：</text>
    <picker class='right' bindchange='ChangeSex' range='{{sex}}'>{{sex[index]}}</picker>
  </view>


  <view class='item'>
    <text class='left'>学号：</text>
    <input class='right' maxlength='10'></input>
  </view>

  <view class='item'>
    <text class='left'>电话号码：</text>
    <input class='right' maxlength='11'></input>
  </view>

<view class='item'>
  <button class='butt' bindtap='Save'>保存修改</button>
  </view>
</view>