page {
  background: rgb(248, 247, 247);
}

.menu {
  margin-top: 60rpx;
}

.item {
  background: rgb(248, 247, 247);
  display: flex;
  border-bottom: 1rpx #eee solid;
  width: 86%;
  margin: 2% 7% 0% 6%;
  font-size: 35rpx;
  padding: 10rpx;
  height: 100rpx;
}

.left {
  display: flex;
  align-items: center;
  padding-left: 15rpx;
}

.input {
  height: 100%;
  width: 60%;
  display: flex;
  font-size: 32rpx;
  color: rgb(136, 136, 136);
}

.picker {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: rgb(136, 136, 136);
}

.header {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  left: 10rpx;
  z-index: 20;
  border-radius: 5rpx;
  margin-top:-10rpx;
}

.butt {
  position: fixed;
  bottom:1%;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 1%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  color: #fff;

}

