page {
  background: rgb(248, 247, 247);
}

.publish {
  font-size: 40rpx;
  padding: 5rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 1%;
  width: 97%;
}

.single {
  background: white;
  height: 120rpx;
  width: 97%;
  margin: 1%;
  padding: 6rpx 10rpx;
  font-size: 30rpx;
  font-weight: 700;
  border-bottom: 1rpx solid #eee;
}

.multiple {
  background: white;
  font-size: 28rpx;
  padding: 6rpx 10rpx;
  margin: 1%;
  min-height: 300rpx;
}

.image_content {
  background: white;
  width: 97%;
  display: flex;
  padding: 10rpx;
  flex-wrap: wrap;
  margin-left: 1%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.image {
  width: 32%;
  height: 120px;
  margin-right: 1%;
  margin-bottom: 1%;
}

.moment_img {
  width: 100%;
  height: 100%;
}

.select {
  background: white;
  display: flex;
  align-items: center;
  width: 100%;
  height: 30px;
}

.send {
  position: fixed;
  bottom: 5rpx;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 1%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  color: #fff;
  z-index: 999;
}

.contact{
  height: 60rpx;
  border-bottom: 1rpx solid #eee;
  margin: 1%;
  padding: 6rpx 10rpx;
}

.sub-title{
  background: white;
  align-items: center;
  font-size: 28rpx;
}

.switch{
  display: flex;
  align-items: center;
  float: right;
}