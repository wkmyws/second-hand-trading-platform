page {
  background: rgb(248, 247, 247);
}

.publish {
  font-size: 38rpx;
  padding: 5rpx;
  background: #fff;
  border-radius: 20rpx;
  margin:5rpx 5rpx 5rpx 5rpx;
  width: 97%;
}
.tip {
  font-size: 30rpx;
  margin: 10rpx 20rpx 110rpx 20rpx;
  color: rgb(83, 34, 5);
}
.single-top {
  background: white;
  height: 80rpx;
  width: 97%;
  margin: 1%;
  padding: 7rpx 6rpx 10rpx 6rpx;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.single {
  background: white;
  height: 80rpx;
  width: 97%;
  font-size: 28rpx;
  margin: 1%;
  padding: 7rpx 6rpx 10rpx 6rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}

.multiple {
  background: white;
  width: 98%;
  margin-left: 1%;
  font-size: 28rpx;
  min-height: 300rpx;
  padding: 7rpx 6rpx 10rpx 6rpx;
}

.image_content {
  background: white;
  width: 98%;
  display: flex;
  flex-wrap: wrap;
  margin-left: 1%;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.image {
  width: 32%;
  height: 120px;
  margin-right: 1%;
  margin-bottom: 1%;
}

.moment_img {
  width: 100%;
  height: 100%;
}

.select {
  background: white;
  display: flex;
  align-items: center;
  width: 98%;
  margin-left: 1%;
  height: 30px;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.send {
  position: fixed;
  bottom: 5rpx;
  width: 80%;
  margin-left: 10%;
  margin-bottom: 1%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  color: #fff;
  z-index: 999;
}

.button_clickef{
  opacity: 0.7;
}