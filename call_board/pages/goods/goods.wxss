page{
  background: #F8F7F7;
}
.head{
  position: sticky;
  z-index: 999;
  background: #fff;
  }

.head-top {
  width: 100%;
  position: fixed;
    box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.search {
  width: 100%;
  display: flex;
  background: #fff;
  flex-direction: row;
  border: 3rpx solid #fff;
  position: relative;
  z-index: 999;
}

.search input {
  margin-top: 15rpx;
  width: 55%;
  height: 60rpx;
  background: rgb(248, 247, 247);
  padding-left: 32rpx;
    border-radius: 50rpx;
}

.input {
  display: block;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  font-size: 35rpx;
  min-height: 1.4rem;
}

.image {
  
  width: 120rpx;
  display: inline-block;
  overflow: hidden;
}

.nav {
  position: relative;
  height: 70rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 65rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  top: 0rpx;
  left: 0;
 
}

.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}

.nav-item.active {
  color: red;
}

.autoplay {
  flex-direction: column;
  background-color: #fff;
  display: flex;
  min-height: 100%;
}

.swiper {
  position: relative;
  overflow: hidden;
  height: 300rpx;
  text-align: center;
  margin-bottom: 20rpx;
  display: block;
  margin: 0;
}

.swiper-item {
  width: 100%;
  height: 300rpx;
  transform: translate(0% 0) translateZ(0rpx);
  will-change: auto;
  position: absolute;
  display: block;
  overflow: visible;
}

.img {
  position: absolute;
  width: 100%;
  height: 300rpx;
  overflow: visible;
  background-color: #fff;
  transform: scale(0.89);
  box-shadow: 0 5rpx 7rpx rgba(0, 0, 0, 0.1);
  display: block;
  border-radius: 20rpx;
  opacity: 0.6;
  transition: all 0.3s ease-in 0s;
}

.active {
  position: relative;
  margin: 0;
  display: inline-block;
  transform: scale(0.98);
  opacity: 1;
}

.img-plus-style {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

.img-style {
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  opacity: 0;
}
.plus_show{
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

.plus_hide{
  display: none;
}
.content {
  margin: 0 20rpx;
  text-align: justify;
}

.item {
  width: 100%;
  background-color: #fff;
  margin: 1%;
  margin-bottom: 20rpx;
  display: inline-block;
  border: 3rpx solid #fff;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
  border-radius: 10rpx;
  position: relative;

}

.item-ava {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.heart {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.item-img {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.item-tit {
  font-size: 25rpx;
  font-weight: 700;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: rgb(7, 7, 7);
  margin: 13rpx;
  line-height: 27rpx;
}

.item-title {
  font-size: 24rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 13rpx;
  line-height: 27rpx;
  word-break: break-all;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
}

.item .name {
  display: flex;
  padding: 0 15rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 22rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}

.item-title-box {
  display: flex;
  position: relative;
}

.name-title {
  flex: 1;
  margin-left: 18rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.name text:last-child {
  flex: 0 0 30rpx;
  color: #c4c4c4;
  text-decoration: underline;
  line-height: 10rpx;
}

.left,.right {
  display: inline-block;
  vertical-align: top;
  width: 48%;
  margin-top: 160rpx;
}

.plus_show{
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

.plus_hide{
  display: none;
}

.right {
  float: right;
}
