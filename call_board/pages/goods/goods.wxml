  <view class="autoplay">
    <swiper current='{{curr}}' class='swiper' autoplay="false" previous-margin='80rpx' next-margin='80rpx' bindchange="swiperChange" interval="2500" duration="350">
      <block wx:for="{{imgUrls}}" wx:key="index">
        <swiper-item class="swiper-item">
          <image src="{{item}}" class="img {{swiperIndex == index ? 'active' : ''}}" mode="scaleToFill" bindtap='swiperAd'/>
        </swiper-item>
      </block>
    </swiper>
  </view>
-->
    <view>
      <!--悬浮按钮-->
      <image src="http://xcx.nau.edu.cn/images/plus.png?" class="img-plus-style" animation="{{animPlus}}" bindtap="publish"></image>
    </view>
    <view>
      <!--下面的瀑布流-->
      <view class="content">
        <view class="left">
          <block wx:for="{{note}}" wx:key="">
            <template is="item" data="{{...item}}" wx:if="{{index%2==0}}"></template>
          </block>
        </view>
        <view class="right">
          <block wx:for="{{note}}" wx:key="">
            <template is="item" data="{{...item}}" wx:if="{{index%2==1}}"></template>
          </block>
        </view>
      </view>
      <template name="item">
        <view class="item">
          <image class="item-img" src="{{goods_head_image}}" mode="widthFix"></image>
          <view class="item-title-box" catchtap='swithDetail'>
            <navigator url="../goods/detail/detail?" class="item-tit">{{goods_title}}</navigator>
          </view>
          <view class="item-title-box">
            <navigator url="../goods/detail/detail?" class="item-title" catchtap='swithDetail'>{{goods_summary}}</navigator>
          </view>
          <view class="name">
            <image class="item-ava" src="{{user_avatar_url}}"></image>
            <text class="name-title">{{user_name}}</text>
            <view class="heart_">
              <image class="heart" src="http://xcx.nau.edu.cn/images/dianzan.png?" catchtap='swithDetail'></image>
              <text>{{heart_num}}</text>
            </view>
          </view>
        </view>
      </template>
    </view>
  </view>
</view>