<view class="custom flex_center" sytle="padding-top:{{statusBarHeight}}rpx">
</view>
<view class="empty_custom" style="padding-top:{{statusBarHeight}}rpx">
</view>
<view>
<image class="back" src="/images/back.png" bindtap="backTo"></image>
</view>
<scroll-view scroll-y="true" class="scroll">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{goods_detail.goods_image_list}}" wx:key="index">
      <swiper-item>
        <image src="{{item}}" data-src="{{item}}" bindtap="previewImage" mode='aspectFit'></image>
      </swiper-item>
    </block>
  </swiper>
  <view class="detail">
    <view class="price">
      ￥{{goods_detail.goods_price}}
    </view>
    <view class="top">
      <view class="title">
        {{goods_detail.goods_title}}
      </view>

      <view class="title_sort">新品</view>
    </view>
    <view class="top">
      <view class="SaveNum">浏览量{{ViewNum}}</view>
      <view class="SaveNum">收藏量{{ThumbNum}}</view>
    </view>
  </view>
  <view class="detail">
    <view class="infor">
      <view>商品来自:</view>
      <image class='userhead' src='{{user_avatar_url}}'></image>
      <view class="infor_detail">
        {{user_name}}</view>
    </view>
    <view class="infor">
      <view>发布时间：
      </view>
      <view class="infor_detail">{{goods_detail.goods_publish_time}}</view>
    </view>
  </view>
  <view class='detail'>
    <view class="separate">商品详情</view>
    <view class="separate_detail">{{goods_detail.goods_content}}</view>
  </view>
