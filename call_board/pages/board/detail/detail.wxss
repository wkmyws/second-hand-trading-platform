page {
  background: rgb(221, 238, 253);
}

.body {
  padding: 15rpx;
  margin-bottom: 130rpx;
}

.bottom {
  height: 80rpx;
}

.board {
  background: white;
  min-height: 300px;
  margin-bottom: 15rpx;
  border-radius: 2px;
  position: relative;

}

.passage {
  margin: auto 15rpx;
  font-size: 32rpx;
}

.passage.time {
  color: #bbb;
  position: absolute;
  bottom: 10rpx;
}

/*图片*/

.image {
  margin-top: 15rpx;
}

.img {
  width: 32%;
  height: 120px;
  margin-left: 1%;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.like {
  right: 70rpx;
}

.collect {
  right: 10rpx;
}

.report {
  top: 15rpx;
  right: 10rpx;
}

/*评论*/

.forum {
  background: white;
  margin-top: 2rpx;
  border-top-color: #eee;

}

.talk {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 15rpx;
}

/*回复*/

.reply {
  background: white;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
}

.input {
  height: 60rpx;
  background: #eee;
  width: 70%;
  position: fixed;
  bottom: 15px;
  left: 10rpx;
  border-radius: 2px;
}

.send {
  height: 60rpx;
  width: 20%;
  text-align: center;
  position: fixed;
  bottom: 15px;
  right: 10rpx;
  border-radius: 2px;
}

/*用户*/

.top {
  display: flex;
}

.userhead {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80px;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: block;
  overflow: hidden;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-right: 15rpx;
}

