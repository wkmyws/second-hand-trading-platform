page {
  background: #eee;
}

.body {
  padding: 15rpx;
  margin-bottom: 15rpx;
}

.bottom {
  height: 80rpx;
}

.board {
  background: white;
  margin-bottom: 5rpx;
  border-radius: 5rpx;
  position: relative;
}

.box {
  background: #fff;
  height: auto;
  margin-bottom: 15rpx;
  padding: 5rpx 5rpx 5rpx 10rpx;
  box-shadow: 6rpx 8rpx 9rpx #ccc;
}

.icon {
  position: absolute;
  float: right;
  width: 50rpx;
  height: 50rpx;
  top: 15rpx;
  right: 20rpx;
}

.passage {
  margin: auto 15rpx;
  font-size: 32rpx;
  text-indent: 6%;
}

.passage.time {
  color: #bbb;
  position: absolute;
  bottom: 10rpx;
}

/*图片*/

.image_content {
  background: white;
  display: flex;
  flex-wrap: wrap;
  margin-left: 1%;
}

.image {
  width: 32%;
  height: 120px;
  margin-right: 1%;
  margin-bottom: 1%;
}

.img {
  width: 100%;
  height: 100%;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}

.like {
  right: 70rpx;
}

.collect {
  right: 10rpx;
}

.report {
  top: 15rpx;
  right: 10rpx;
}

/*评论*/

.comment {
  position: relative;
  margin-bottom: 150rpx;
}

.comment_head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin: 5rpx;
  display: block;
  overflow: hidden;
}

.comment_name {
  font-size: 30rpx;
  display: flex;
  color: #bbb;
  position: relative;
  font-weight: bold;
  align-items: center;
  margin-right: 15rpx;
  margin-top: -15rpx;
}

.comment_tent {
  font-size: 30rpx;
  position: relative;
  margin: -25rpx 10rpx 5rpx 60rpx;
  text-indent: 6%;
}

.forum {
  background: white;
  margin-top: 2rpx;
  border-top-color: #eee;
}

.talk {
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 15rpx;
}

/*回复*/

.reply {
  background: white;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
}

.input {
  height: 60rpx;
  background: #eee;
  width: 70%;
  position: fixed;
  bottom: 15px;
  left: 10rpx;
  border-radius: 2px;
}

.send {
  height: 60rpx;
  width: 20%;
  text-align: center;
  position: fixed;
  bottom: 15px;
  right: 10rpx;
  border-radius: 2px;
}

/*用户*/

.top {
  display: flex;
}

.userhead {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80px;
  margin-top: 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  display: block;
  overflow: hidden;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  color: #bbb;
  align-items: center;
  margin-right: 15rpx;
}

.mini {
  color: #bbb;
  font-size: 25rpx;
  position: absolute;
  top: 70rpx;
  right: 10rpx;
}

/*图标*/

.save1 {
  position: absolute;
  right: 50rpx;
  height: 50rpx;
  width: 50rpx;
  bottom: 10rpx;
}

.SaveNum {
  font-size: 27rpx;
  color: #bbb;
  position: relative;
  margin-left: 15rpx;
  margin-bottom: 3rpx;
}

.thumbs_up1 {
  position: absolute;
  right: 140rpx;
  height: 50rpx;
  width: 50rpx;
  bottom: 10rpx;
}

.ThumbNum {
  font-size: 27rpx;
  color: #bbb;
  position: relative;
  margin-bottom: 3rpx;
}

.title {
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 37rpx;
  font-weight: 600;
  margin: 0rpx 10rpx 8rpx 15rpx;
}
