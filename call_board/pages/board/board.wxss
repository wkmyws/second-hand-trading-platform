page {
  background-color: #eee;
}



.board {
  position: relative;
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-bottom: 1rpx #eee;
  box-shadow:1.5rpx 0rpx 1.5rpx 0px #eee;
  
}

.body {
  display: flex;
  flex-direction: row;
}


.text1{
  position: relative;
  font-size: 28rpx;
  left: 5rpx;
  margin-right: 5rpx;
  overflow : hidden;
  text-overflow:unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}



.img-plus-style {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

/*图片*/

.bottom {
  height: 80rpx;
}

.img {
  position: relative;
  width: 160rpx;
  height: 189rpx;
  margin-left: 1%;
  float: left;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: auto;
}

.save1{
  position: absolute;
  right:50rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.SaveNum{
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.thumbs_up1{
  position: absolute;
  right: 140rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.ThumbNum{
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 100rpx;
  bottom: 10rpx;
}

/*用户*/

.top {
  display: flex;
  height: 100rpx;
}

.userhead {
  width: 50rpx;
  height: 50rpx;
  border-radius: 80px;
  box-shadow:0px 0px 0.5px 1px #eee;
  margin:10rpx 15rpx 10rpx 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: -25rpx;
  }

.time {
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 15rpx;
  line-height: 100rpx;
}
.title{
  font-size: 35rpx;
  font-weight: 600;
  margin: -35rpx 10rpx 8rpx 5rpx;
}
/*悬浮按钮*/

.img-style {
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  opacity: 0;
}
