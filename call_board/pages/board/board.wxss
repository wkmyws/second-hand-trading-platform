page {
  background-color: #eee;
}

.nav {
  padding-top: 60rpx;
  position: sticky;
  z-index: 999;
  padding-bottom: 20rpx;
}

.navbar {
  display: flex;
  flex-direction: row;
  justify-content: center;
  border: 3rpx solid #fff;
  background: #fff;
  width: 100%;
  position: fixed;
  top: 0;
  padding-top: 15rpx;
  padding-bottom: 12rpx;
  align-items: flex-end;
  text-align: center;
}

.navbar .item {
  width: 130rpx;
  font-size: 37rpx;
  color: black;
}

.navbar .item.active {
  color: #e00;
  font-size: 40rpx;
}

.navbar .item.active:after {
  content: '';
  display: block;
  position: relative;
  top: 4rpx;
  height: 4rpx;
  background-color: #e00;
}

.board {
  position: relative;
  width: 98%;
  margin-top: 20rpx;
  margin-left: 1%;
  background-color: #fafafa;
  padding: 10rpx;
}

.body {
  position: relative;
  display: flex;
}

/*图片*/

.bottom {
  height: 80rpx;
}

.butt {
  width: 100%; /* 670rpx */
  height: 275rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: auto;
}

/*用户*/

.top {
  display: flex;
  height: 70rpx;
}

.userhead {
  width: 50rpx;
  height: 50rpx;
  border-radius: 80px;
  margin: 10rpx 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
}

.icon {
  position: absolute;
  float: right;
  width: 40rpx;
  height: 40rpx;
  top: 20rpx;
  right: 20rpx;
}

.image {
  margin: -30rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.img {
  position: relative;
  width: 220rpx;
  height: 250rpx;
  overflow: hidden;
}

.input {
  display: block;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  font-size: 35rpx;
  min-height: 1.4rem;
}

.intro{
  width: 60%;
}

.SaveNum {
  font-size: 25rpx;
  color: #bbb;
  position: relative;
  margin-left: 25rpx;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
}

.text1 {
  position: relative;
  font-size: 28rpx;
  margin-left: 25rpx;
  text-indent: 50rpx;
  line-height: 50rpx;
  margin-right: 25rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-family: "微软雅黑";
  text-align: justify;
}

.time {
  font-size: 25rpx;
  color: #bbb;
  position: absolute;
  float: right;
  right: 25rpx;
}

.title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 0rpx 25rpx 10rpx 25rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.plus_show{
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

.plus_hide{
  display: none;
}

.miniimg {
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  overflow: hidden;
}

/*热榜*/

.num {
  font-size: 34rpx;
  color: #e00;
  font-weight: 700;
  position: relative;
  margin: 24rpx 25rpx 24rpx 25rpx;
}

.list-top {
  display: flex;
  height: 80rpx;
}

.list-title {
  font-size: 34rpx;
  font-weight: bold;
  align-items: center;
  margin-top: 25rpx;
  width: 450rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list-number {
  position: absolute;
  right: 100rpx;
  top: 20rpx;
  font-size: 28rpx;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: 10rpx;
}

/*搜索*/

.search {
  display: flex;
  flex-direction: row;
  border: 3rpx solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 20rpx 10rpx;
  position: sticky;
  top: 50rpx;
}

.search input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding-left: 32rpx;
}