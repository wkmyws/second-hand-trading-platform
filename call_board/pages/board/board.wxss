/*图片*/

.bottom {
  height: 80rpx;
}

.img {
  width: 160rpx;
  height: 185rpx;
  margin-left: 1%;
  float: left;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: auto;
}

.save1{
  position: absolute;
  right:50rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.SaveNum{
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.thumbs_up1{
  position: absolute;
  right: 140rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.ThumbNum{
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 100rpx;
  bottom: 10rpx;
}

/*用户*/

.top {
  display: flex;
  height: 100rpx;
}

.userhead {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80px;
  box-shadow:0px 0px 0.5px 1px rgb(185, 207, 226);
  margin: auto 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.time {
  font-size: 32rpx;
  color: #bbb;
  position: absolute;
  right: 15rpx;
  line-height: 100rpx;
}

/*悬浮按钮*/

.img-style {
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  opacity: 0;
}
