page {
  background-color: #eee;

}

.nav{
  padding-top: 60rpx;
  position: sticky;
  z-index: 999;
  }

.navbar{
  display: flex;
  flex-direction: row;
  justify-content: center;
  border: 3rpx solid #fff;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
  background-image: linear-gradient(-45deg, #db86bd 20%, #0991c1 100%);
  box-shadow: 6rpx 8rpx 9rpx #ccc;
  width: 100%;
  position: fixed;
  top:0;
  padding-top: 15rpx;
  padding-bottom: 12rpx;
  align-items: flex-end;
  text-align: center;
}

.navbar .item{
  width: 130rpx;
  font-size: 37rpx;
  color: #fff;
}

.navbar .item.active{
  color: #e00;
  font-size: 40rpx;
}

.navbar .item.active:after{
  content: '';
  display: block;
  position: relative;
  top: 4rpx;
  height: 4rpx;
  background-color: #e00;
}

.board {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx #eee;
 box-shadow: 0rpx 8rpx 9rpx #ccc;
  padding-bottom: 10rpx;
}


.body {
  display: flex;
 
}

.text1 {
  position: relative;
  font-size: 28rpx;
  left: 5rpx;
  text-indent: 6%;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.text2 {
  position: relative;
  font-size: 28rpx;
  left: 5rpx;
  text-indent: 6%;
  margin-right: 5rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.img-plus-style {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  bottom: 50rpx;
  right: 50rpx;
  z-index: 100;
}

/*图片*/

.bottom {
  height: 80rpx;
}

.image {
  margin: -30rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #f4f4f4;
}

.img {
  position: relative;
  width: 160rpx;
  height: 210rpx;
  margin: 0 -25rpx 0 -25rpx;
  float: left;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

.butt {
  width: 100%; /* 670rpx */
  height: 268rpx;
  box-shadow: 0 10rpx 15rpx rgba(0, 0, 0, 0.1);
  border-radius: 9rpx;
  overflow: hidden;
}

/*图标*/

.pic {
  position: absolute;
  bottom: 10rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: auto;
}

.save1 {
  position: absolute;
  right: 50rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}

.SaveNum {
  font-size: 27rpx;
  color: #bbb;
  position: relative;
  margin-left: 15rpx;
  margin-bottom:3rpx;
}
.num{
    font-size: 30rpx;
  color:#e00;
  position: relative;
  margin:15rpx 30rpx 15rpx 30rpx;

}
.thumbs_up1 {
  position: absolute;
  right: 140rpx;
  height: 40rpx;
  width: 40rpx;
  bottom: 10rpx;
}
.thumbs_up2 {
  position: absolute;
  right: 100rpx;
  bottom: 10rpx;
    font-size: 28rpx;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: 10rpx;
}
.ThumbNum {
  font-size: 27rpx;
  color: #bbb;
  position: relative;
  margin-bottom: 3rpx;
}

/*用户*/

.top {
  display: flex;
  height: 60rpx;
}

.userhead {
  width: 50rpx;
  height: 50rpx;
  border-radius: 80px;
  box-shadow: 0px 0px 0.5px 1px #eee;
  margin: 10rpx 15rpx 10rpx 15rpx;
  display: flex;
  overflow: hidden;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  color: rgb(196, 193, 193);
  align-items: center;
  margin-top: 10rpx;
}

.time {
  font-size: 27rpx;
  color: #bbb;
  position: absolute;
  float: right;
  right: 20rpx;
}
.icon{
   position: absolute;
  float: right;
  width: 40rpx;
  height: 40rpx;
  top: 15rpx;
  right: 20rpx;
}
.title {
  font-size:35rpx;
  font-weight:700;
  margin: 0rpx 10rpx 8rpx 15rpx;
  overflow: hidden;
  text-overflow: unset;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;

}
.miniimg {
  width: 120rpx;
  height: 80rpx;
  display: inline-block;
  overflow: hidden;
}


/*搜索*/

.search {
  display: flex;
  flex-direction: row;
  border: 3rpx solid #fff;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 10rpx;
  position: sticky;
  top: 50rpx;
   padding-top: 25rpx;
}

.search input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  padding-left: 32rpx;
}

.input {
  display: block;
  text-overflow: clip;
  overflow: hidden;
  white-space: nowrap;
  font-family: UICTFontTextStyleBody;
  font-size: 35rpx;
  min-height: 1.4rem;
}

